mixin thumbCard(event)
  .col-md-4
    .card.mb-4.shadow-sm
      .card-body
        .card-text Name: #{event.name}
        .card-text Description: #{event.description}
        .card-text.mb-4 #{event.date}
        if flag
          .d-flex.justify-content-between.align-items-center
          
            a.btn.btn-sm.btn-primary.post(href=`/events/${event._id}`) Details

          small.text-muted *
