mixin thumbCard(item)
  .col-md-4
    .card.mb-4.shadow-sm
      .card-body
        .card-text Name: #{item.name}
        .card-text Description: #{item.description}
        .card-text Price: #{item.price}
        if flag
          .d-flex.justify-content-between.align-items-center
          
            a.btn.btn-sm.btn-primary.post(href=`/items/${item._id}`) Edit

          small.text-muted *
